---
const {branch, type} = Astro.params;
const entries = await fetch(`/b/${branch}/${type}.json`).then(r=>r.json());
---
<html lang="ru">
  <head><meta charset="utf-8" /><title>{type} | {branch} | Канонар</title><link rel="stylesheet" href="/src/styles/global.css" /></head>
  <body>
    <main class="container">
      <h1>{type} – {branch}</h1>
      <ul>{entries.map((e:any)=> <li><a href={`/b/${branch}/e/${type}/${e.slug}`}>{e.title}</a></li>)}</ul>
    </main>
  </body>
</html>
